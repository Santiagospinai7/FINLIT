<div class="log-in-master">
  <div class="log-in-container">
    <h2>Edit Account</h2>
    <div data-controller="account-card">
      <%= simple_form_for @account, data: { account_card_target: "form" } do |f| %>
        <div class="form-inputs">
          <%= f.input :account_name %>
          <%= f.input :account_type,
                      collection: ['Current account', 'Cash', 'Credit card', 'Investment'],
                      prompt: "Select a type",
                      input_html: { data: { account_card_target: 'input', action: "change->account-card#accountType" } } %>
          <%= f.input :balance %>
          <%= f.input :account_number %>
        </div>
        <%= f.association :icon,
                        as: :radio_buttons,
                        collection: Icon.all.map { |icon| [".", icon.id, style: "background-image: url(#{cl_image_path(icon.url)});"] },
                        input_html: {
                        class: "icon-radio"
                        }
        %>
        <div class="form-actions">
          <%= f.button :submit %>
        </div>
      <% end %>
    </div>
  </div>
</div>

<br>

<div>
  <%= link_to "Show this account", @account %> |
  <%= link_to "Back to accounts", accounts_path %>
</div>

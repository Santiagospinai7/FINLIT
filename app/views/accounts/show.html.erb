<p style="color: green"><%= notice %></p>
<div class="background-gradient-master-transactions">
  <div class="background-gradient-container-transactions"></div>
  <div class="shadow-gradient"></div>
</div>
<h1 class="transactions-title">Account</h1>
<div class="account-flex">
  <div class="account-grid-item-transaction">
    <div class="return-btn-flex">
      <%= button_to "<", accounts_path, class:"return-btn",  :method => :get %>
    </div>
    <%= cl_image_tag Icon.find(@account.icon_id).url, class:"bank-avatar"%>
    <%= render @account %>
    <div>
      <%# ------------ %>
      <div class="btn-pluss-master">
        <nav class="btn-pluss-wrapper">
          <div href="#" class="btn-pluss">
            <ul>
              <li><%= link_to "✏️  |  Edit", edit_account_path(@account) %></li>
              <li><%= link_to "🗑️  |  Delete", account_path(@account), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}%></li>
            </ul>
          </div>
        </nav>
      </div>
      <%# ---------- %>
    </div>
  </div>
  <div class="graph-img">
    <%= line_chart Transaction.line_chart(@account), colors: ["#6610f2"]  %>
  </div>
</div>
<%# ----------- SCROLLER ANIMATION ------------ %>
      <div class="scroller-wheel">
    <a href="javascript:;" class="scroll-down mouse effect1">
      <span id="scroll-down-span"></span>
    </a>
  </div>
  <p id="scroll-p">View Transactions</p>
  <div class="container-scroll">
    <div id="typewriter-output"></div>
    <span id="cursor"></span>
  </div>
  <script>
    setTimeout(function() {
      document.getElementById("scroll-p").style.display = "block";
      document.getElementById("scroll-p").style.opacity = 0;

      setTimeout(function() {
        document.getElementById("scroll-p").style.transition = "opacity 3s ease-in";
        document.getElementById("scroll-p").style.opacity = 1;
      }, 10);
    }, 2000);
    setTimeout(function() {
      document.querySelector(".scroller-wheel").style.display = "block";
      document.querySelector(".scroller-wheel").style.opacity = 0;

      setTimeout(function() {
        document.querySelector(".scroller-wheel").style.transition = "opacity 3s ease-in";
        document.querySelector(".scroller-wheel").style.opacity = 1;
      }, 10);
    }, 1000);
  </script>
  <%# ----------- SCROLLER ANIMATION END ------------ %>
<div class="background-gradient-master-transactions-bottom">
  <div class="background-gradient-container-transactions-bottom"></div>
</div>
<h1 class="transactions-title-lower">Transactions</h1>
<div class="transactions-master">
  <div class="transactions-location-div">
    <% @transactions.each do |transaction| %>
      <div class="transaction-btn-flex">
      <%# ---------- %>
      <div class="btn-pluss-transactions-master">
        <div class="btn-pluss-wrapper-transactions">
          <div href="#" class="btn-pluss-transactions">
            <ul>
              <li><%= link_to "✏️  |  edit", edit_account_transaction_path(@account, transaction) %></li>
              <li><%= link_to "🗑️  |  Delete", account_transaction_path(@account, transaction), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}%></li>
            </ul>
          </div>
        </div>
      </div>
      <%# ---------- %>
      </div>
      <div class="transactions-list-master">
        <div class="transactions-card">
          <img class="bank-avatar-transaction" src="https://res.cloudinary.com/djr22sgp3/image/upload/v1678225833/Full_Black_BG-W-P0.05_zyr5xs.png"/>
          <%= render partial: 'transactions/transaction', locals: { transactions: transaction } %>
        </div>
      </div>
    <% end %>
  </div>
  <br>
  <%# <%= button_to "+ Add", new_account_transaction_path(@account), class:"card-action-buttons",  :method => :get %> %>
  <div class="record-btn-flex">
    <%= button_to "+", new_account_transaction_path(@account), class: "add-btn", title: "Add Transactions", method: :get %>
  </div>
</div>

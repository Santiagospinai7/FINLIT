<div class="background-gradient-master-transactions">
  <div class="background-gradient-container-transactions"></div>
  <div class="shadow-gradient"></div>
</div>
<div class="container-dashboard">
  <div id="title">
    <h1 class="dashboard-title">Welcome Back, <%= (current_user.first_name).capitalize %>.</h1>
  </div>
  <div class="widgets">
    <div class="row">
      <div class="column">
        <div class="card">
          <h3 class="h3-dashboard">Across accounts</h3>
          <%= link_to accounts_path, class: "account-link" do %>
            <div class="balance-card">
              <p class="balance-title-card">Balance</p>
              <p class="balance-total-card"><%= "¬£#{number_with_delimiter(@accounts_money, :delimiter => ',')}" %></p>
            </div>
          <% end %>
        </div>
        <div class="card card-spec" data-controller="unsplash">
          <div class="img-card">
            <h3 class="news-header">News</h3>
            <%# -------------------- UNSPLASH SRC LINK IN SRC BELOW >>>>>>> %>
            <img class="news-img" data-unsplash-target="image" src="https://images.unsplash.com/photo-1511883040705-6011fad9edfc?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1174&q=80"/>
          </div>
          <div class="news-card" data-controller="news">
            <button data-action="news#refresh unsplash#refresh" id="refresh-btn" title="Refresh News">‚ü≥</button>
            <h6 data-news-target="source" id="news-source"></h6>
            <p data-news-target="title" id="news-title"></p>
            <a data-news-target="link" id="news-link" class="news-link" target="_blank" href="">‚ûî</a>
          </div>
        </div>
      </div>
      <div class="column">
        <div class="card savings-card">
          <% if @savings.length > 0 %>
            <h3 class="h3-dashboard">Savings - <%= @saving_account.account_name %></h3>
            <br>
            <div id="char">
              <%= pie_chart @saving_chart, donut: true, height: '200px', legend: false, colors: ["#794CF0", "#4C4B4E"], library: {animation: {easing: 'easeOutQuad'}, elements: {arc: {borderWidth: 0}}, plotOptions: { pie: { dataLabels: { enabled: false }}} } %>
            </div>
            <div class="saving-msg">
              <p id="amount"><strong><%= "¬£#{number_with_delimiter(@saving_gap, :delimiter => ',')}" %></strong></p>
              <p id="text">Remaining to reach your goal</p>
              <p id="motivational-msg">You've got this! üôåüèΩ</p>
            </div>
          <% else %>
            <h3>Savings<h3>
            <p>Let's make more Savings!</p>
            <%= link_to "Save Money", new_account_path , class: 'button-create-saving'%>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

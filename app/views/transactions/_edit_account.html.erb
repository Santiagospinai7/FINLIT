<div class="log-in-master">
  <div class="log-in-container">
    <h2>Edit Transaction</h2>
    <div data-controller="account-card">
      <%= simple_form_for [@account, @transaction] do |f| %>

        <div class="form-inputs">
          <%= f.input :operation_type, collection: ["Income", "Expense"], prompt: "Select an operation" %>
          <%= f.input :category, collection: Transaction.categories, prompt: "Select a category" %>
          <%= f.input :amount, as: :decimal, input_html: { data: { set_amount_target: "amountInput"}} %>
          <%= f.input :date, as: :date %> 
        </div>
        <div class="form-actions">
          <%= f.button :submit, value: "Update", class: "add-btn-new-transactions" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
<div class="log-in-master">
  <div  data-controller="set-amount"class="log-in-container">
    <h1 class="title-text">New Transaction</h1>

    <div class="container">

        <form class="toggle">

            <input type="radio" id="choice1" name="choice" value="creative">
            <label data-action="click->set-amount#setExpense" data-set-amount-target="income-label" class="Income-text" for="choice1">Income</label>

            <input type="radio" id="choice2" name="choice" value="productive">
            <label data-action="click->set-amount#setIncome" data-set-amount-target="expense-label"class="Expense-text" for="choice2">Expense</label>

            <div id="flap"><span class="content"></span></div>

        </form>

    </div>

    <% if @account.account_type == "Savings" %>
      <%= render "add_saving_form", account: @account, transaction: @transaction %>
    <% else %>
      <%= simple_form_for [@account, @transaction] do |f| %>
        <%= f.input :category, collection: ['Groceries', 'Transportation', 'Entertainment', 'Utilities', 'Other'], prompt: "Select a category" %>
        <%= f.input :amount, input_html: { data: { set_amount_target: "amountInput"}} %>
        <%= f.input :date, as: :date %>
        <%= f.button :submit, value: "Add" %>
      <% end %>
    <% end %>
    
    <br>
    <div>
      <%= link_to "< Back to account", account_path(@account) %>
    </div>
  </div>
</div>
